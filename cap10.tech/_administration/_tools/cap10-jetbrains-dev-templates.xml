    <!-- 10. DevOps Incident Review Template -->
    <template name="cap10-development-devops-incident" value="DevOps Incident Review on $DATE$:
Incident ID: $INCIDENT$
Description: $DESCRIPTION$
Root Cause: $ROOT$
Resolution: $RESOLUTION$
Follow-Up Actions: $ACTION$" description="Document and review DevOps incidents" toReformat="true" toShortenFQNames="true">
        <variable name="DATE" expression="date()" defaultValue="YYYY-MM-DD" alwaysStopAt="false" />
        <variable name="INCIDENT" expression="" defaultValue="Incident ID or title" alwaysStopAt="true" />
        <variable name="DESCRIPTION" expression="" defaultValue="Brief incident description" alwaysStopAt="true" />
        <variable name="ROOT" expression="" defaultValue="Root cause analysis" alwaysStopAt="true" />
        <variable name="RESOLUTION" expression="" defaultValue="Resolution details" alwaysStopAt="true" />
        <variable name="ACTION" expression="" defaultValue="Follow-up actions" alwaysStopAt="true" />
        <context>
            <option name="TEXT" value="true" />
        </context>
    </template>
</templateSet>
