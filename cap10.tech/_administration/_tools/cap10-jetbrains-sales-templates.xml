<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="SalesCommunicationTemplates">
    <!-- 1. Initial Contact Template -->
    <template name="cap10-sales-initial-contact" value="Initial Contact with $CLIENT$ on $DATE$:
Introduction: $INTRO$
Products/Services: $PRODUCTS$
Notes: $NOTES$
Next Steps: $NEXT$" description="Log the first interaction with a prospective client" toReformat="true" toShortenFQNames="true">
        <variable name="DATE" expression="date()" defaultValue="YYYY-MM-DD" alwaysStopAt="false" />
        <variable name="CLIENT" expression="" defaultValue="Client Name" alwaysStopAt="true" />
        <variable name="INTRO" expression="" defaultValue="Brief introduction overview" alwaysStopAt="true" />
        <variable name="PRODUCTS" expression="" defaultValue="Products or services discussed" alwaysStopAt="true" />
        <variable name="NOTES" expression="" defaultValue="Any additional notes" alwaysStopAt="true" />
        <variable name="NEXT" expression="" defaultValue="Follow-up actions" alwaysStopAt="true" />
        <context>
            <option name="TEXT" value="true" />
        </context>
    </template>

    <!-- 2. Follow-Up Email Template -->
    <template name="cap10-sales-followup-email" value="Follow-Up Email to $CLIENT$ on $DATE$:
Subject: $SUBJECT$
Summary: $SUMMARY$
Action Items: $ACTION$" description="Track follow-up emails after initial contact or meetings" toReformat="true" toShortenFQNames="true">
        <variable name="DATE" expression="date()" defaultValue="YYYY-MM-DD" alwaysStopAt="false" />
        <variable name="CLIENT" expression="" defaultValue="Client Name" alwaysStopAt="true" />
        <variable name="SUBJECT" expression="" defaultValue="Email Subject" alwaysStopAt="true" />
        <variable name="SUMMARY" expression="" defaultValue="Email summary or key points" alwaysStopAt="true" />
        <variable name="ACTION" expression="" defaultValue="Next steps or requests" alwaysStopAt="true" />
        <context>
            <option name="TEXT" value="true" />
        </context>
    </template>

